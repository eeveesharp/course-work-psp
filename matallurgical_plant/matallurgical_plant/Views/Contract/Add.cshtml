@model matallurgical_plant.Models.Contract

@{
    ViewData["Title"] = "Add";
}
<style>
    body {
        background-image: url(https://github.com/ultoRjs/psp/blob/lab2/lab2/back3.jpg?raw=true);
    }
    h1 {
        text-align: center;
    }
</style>

<h1>Добавление договора</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId"></label>
                <select asp-for="UserId" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <label asp-for="SpecificationId"></label>
                <select asp-for="SpecificationId" asp-items="ViewBag.Specifications"></select>
            </div>
            <div class="form-group">
                <label asp-for="Provider" class="control-label"></label>
                <input readonly value="ОАО МеталлИнтертрейдинг" asp-for="Provider" class="form-control" />
                <span asp-validation-for="Provider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

