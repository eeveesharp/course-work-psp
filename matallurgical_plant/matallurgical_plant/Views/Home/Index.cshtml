@model List<matallurgical_plant.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">FUCKINGCOURSE</h1>
    

    @Html.ActionLink("Add product ", "AddProduct", new { })
    <table>
        <tr>
            <th>Номер</th>
            <th>Название</th>
            <th>Материал</th>
            <th>Цена</th>
            <th>Кол-во</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(model => item.NameProduct)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Material)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Quantity)
                </td>

                <td>
                    @Html.ActionLink("Edit ", "Edit", new { id = item.Id ,item})
                    @Html.ActionLink("Details ", "Details", new { id = item.Id })
                    @Html.ActionLink("Delete ", "Delete", new { id = item.Id })
                </td>

            </tr>
        }
    </table>
</div>
