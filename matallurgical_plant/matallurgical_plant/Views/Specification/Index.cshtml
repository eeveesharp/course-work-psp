@model List<matallurgical_plant.Models.Specification>

@{
    ViewData["Title"] = "Specification Page";
}

<div class="text-center">
    @Html.ActionLink("Add specification", "Add")

    @if (Model.Count > 0)
    {
        <table>
            <tr>
                <th>Id</th>
                <th>Id продукта</th>
                <th>Время доставки</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.ProductId)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.DeliveryTime)
                    </td>

                    <td>
                        @Html.ActionLink(" Edit ", "Edit", new { id = item.Id, item })
                        @Html.ActionLink(" Details ", "Details", new { id = item.Id })
                        @Html.ActionLink(" Delete ", "Delete", new { id = item.Id })
                    </td>

                </tr>
            }
        </table>
    }
</div>

