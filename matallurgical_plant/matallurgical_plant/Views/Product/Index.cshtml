@model List<matallurgical_plant.Models.Product>

@{
    ViewData["Title"] = "Product Page";
}

<style>
    body {
        background-image: url(https://github.com/ultoRjs/psp/blob/lab2/lab2/back3.jpg?raw=true);
    }

    form {
        text-align: center;
    }
    .AddProduct {
        font-weight: bold;
        font-size: 20px;
    }
</style>
<form asp-controller="Product" asp-action="Index">
    <p>
        Название товара: <input type="text" name="SearchString" />
        <input type="submit" value="Поиск" />
    </p>
</form>

<span class="AddProduct">@Html.ActionLink("Добавить продукт", "Add")</span>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.NameProduct)
                </td>

                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>

                <td>
                    @Html.ActionLink("Изменить  ", "Edit", new { id = item.Id, item }) |
                    @Html.ActionLink("Подробнее ", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить ", "Delete", new { id = item.Id })
                </td>

            </tr>
        }
    </tbody>
</table>
